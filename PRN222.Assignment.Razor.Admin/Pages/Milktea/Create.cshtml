@page
@model PRN222.Assignment.Razor.Admin.Components.Milktea.CreateModel
@{
    ViewData["Title"] = "Create Milk Tea Product";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-image: url('/images/background.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        color: #333;
        font-family: 'Poppins', sans-serif;
    }

    .page-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(10px);
    }

    .page-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e67e22;
        position: relative;
    }

        .page-header h1 {
            color: #e67e22;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .page-header h4 {
            color: #7f8c8d;
            font-weight: 500;
        }

    .form-card {
        background-color: white;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #ddd;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #e67e22;
            box-shadow: 0 0 0 0.2rem rgba(230, 126, 34, 0.25);
        }

    label.control-label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 0.5rem;
        display: block;
    }

    .btn-primary {
        background-color: #e67e22;
        border-color: #e67e22;
        padding: 12px 24px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #d35400;
            border-color: #d35400;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(230, 126, 34, 0.3);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

    .btn-outline-secondary {
        color: #7f8c8d;
        border-color: #7f8c8d;
        padding: 12px 24px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-outline-secondary:hover {
            background-color: #7f8c8d;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(127, 140, 141, 0.3);
        }

    .back-link {
        display: inline-block;
        margin-top: 1.5rem;
        color: #e67e22;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
    }

        .back-link:hover {
            color: #d35400;
            text-decoration: none;
        }

    .form-section {
        border-left: 4px solid #e67e22;
        padding-left: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-section-title {
        font-weight: 600;
        color: #e67e22;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
    }

    .text-danger {
        color: #e74c3c !important;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .preview-image {
        max-width: 150px;
        max-height: 150px;
        border-radius: 8px;
        margin-top: 1rem;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .price-group {
        position: relative;
    }

        .price-group .form-control {
            padding-left: 30px;
        }

        .price-group::before {
            content: "$";
            position: absolute;
            left: 15px;
            top: 45px;
            color: #7f8c8d;
            font-weight: 600;
        }

    .custom-file {
        position: relative;
        display: inline-block;
        width: 100%;
        height: calc(1.5em + 0.75rem + 2px);
        margin-bottom: 0;
    }

    .custom-file-input {
        position: relative;
        z-index: 2;
        width: 100%;
        height: calc(1.5em + 0.75rem + 2px);
        margin: 0;
        opacity: 0;
    }

    .custom-file-label {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        z-index: 1;
        height: calc(1.5em + 0.75rem + 2px);
        padding: 0.375rem 0.75rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 8px;
        transition: all 0.3s;
        display: flex;
        align-items: center;
    }

        .custom-file-label::after {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            z-index: 3;
            display: block;
            height: calc(1.5em + 0.75rem);
            padding: 0.375rem 0.75rem;
            line-height: 1.5;
            color: #fff;
            content: "Browse";
            background-color: #e67e22;
            border-left: inherit;
            border-radius: 0 8px 8px 0;
        }

    #imagePreview {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 8px;
        margin-top: 1rem;
        background-color: #f9f9f9;
    }

    .floating-actions {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 100;
    }

    .btn-float {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        text-align: center;
        line-height: 60px;
        font-size: 1.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        margin-left: 1rem;
        display: inline-block;
    }

    .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
        color: white;
    }

    .btn-info {
        background-color: #3498db;
        border-color: #3498db;
        color: white;
    }

    /* Animation */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .animated {
        animation: fadeIn 0.5s ease-out forwards;
    }
</style>

<div class="page-container animated">
    <div class="page-header">
        <h1><i class="fas fa-plus-circle"></i> Create Product</h1>
        <h4>Add a new milk tea product to your menu</h4>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="form-card">
                <form method="post" enctype="multipart/form-data" id="createForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-section">
                        <div class="form-section-title"><i class="fas fa-info-circle"></i> Basic Information</div>

                        <div class="form-group">
                            <label asp-for="MilkTeaProduct.ProductName" class="control-label">Product Name</label>
                            <input asp-for="MilkTeaProduct.ProductName" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="MilkTeaProduct.ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MilkTeaProduct.CategoryId" class="control-label">Category</label>
                            <select asp-for="MilkTeaProduct.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="MilkTeaProduct.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MilkTeaProduct.Description" class="control-label">Description</label>
                            <textarea asp-for="MilkTeaProduct.Description" class="form-control" rows="4" placeholder="Describe your product..."></textarea>
                            <span asp-validation-for="MilkTeaProduct.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-section-title"><i class="fas fa-tag"></i> Pricing & Availability</div>

                        <div class="form-group price-group">
                            <label asp-for="MilkTeaProduct.BasePrice" class="control-label">Base Price</label>
                            <input asp-for="MilkTeaProduct.BasePrice" class="form-control" placeholder="0.00" />
                            <span asp-validation-for="MilkTeaProduct.BasePrice" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="MilkTeaProduct.IsAvailable" value="true" checked />
                                <span style="margin-left: 10px;">Available for Purchase</span>
                            </label>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-section-title"><i class="fas fa-image"></i> Product Image</div>

                        <div class="form-group">
                            <label class="control-label">Upload Image</label>
                            <div class="custom-file">
                                <input type="file" id="imageUpload" name="ImageFile" class="custom-file-input" accept="image/*" />
                                <label class="custom-file-label" for="imageUpload">Choose image...</label>
                            </div>
                            <input type="hidden" asp-for="MilkTeaProduct.ImagePath" />
                            <span asp-validation-for="MilkTeaProduct.ImagePath" class="text-danger"></span>
                            <div id="imagePreview" class="mt-3" style="display: none;">
                                <img id="preview" src="#" alt="Preview" style="max-width: 100%; height: auto; border-radius: 8px;" />
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Product
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary ml-2">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-card">
                <h5><i class="fas fa-lightbulb"></i> Quick Tips</h5>
                <hr>
                <ul class="pl-4">
                    <li><strong>Product Name</strong> should be unique and descriptive.</li>
                    <li><strong>Description</strong> should highlight the key features and flavors.</li>
                    <li><strong>Base Price</strong> is the starting price before any add-ons.</li>
                    <li><strong>Image</strong> should be high quality and clearly show the product.</li>
                </ul>

                <div class="alert alert-info mt-4">
                    <i class="fas fa-info-circle"></i> Products will be displayed to customers exactly as you create them here.
                </div>

            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-page="./Index" class="back-link">
            <i class="fas fa-arrow-left"></i> Back to Products List
        </a>
    </div>
</div>

<div class="floating-actions">
    <a href="#" class="btn-float btn-success" id="quickSubmitBtn" title="Quick Create">
        <i class="fas fa-bolt"></i>
    </a>
    <a asp-page="./Index" class="btn-float btn-info" title="Back to List">
        <i class="fas fa-list"></i>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            // Initialize custom file input
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);

                // Image preview
                var fileInput = document.getElementById('imageUpload');
                var preview = document.getElementById('preview');
                var imagePreview = document.getElementById('imagePreview');

                if (fileInput.files && fileInput.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        preview.src = e.target.result;
                        imagePreview.style.display = 'block';
                    }
                    reader.readAsDataURL(fileInput.files[0]);
                }
            });

            // Quick submit button
            $("#quickSubmitBtn").click(function (e) {
                e.preventDefault();
                // Submit the form
                $("#createForm").submit();
            });

            // Fill sample data functionality
            $("#fillSampleBtn").click(function () {
                if (!$("#MilkTeaProduct_ProductName").val()) {
                    $("#MilkTeaProduct_ProductName").val("Classic Brown Sugar Milk Tea");
                }
                if (!$("#MilkTeaProduct_Description").val()) {
                    $("#MilkTeaProduct_Description").val("Our signature milk tea with premium brown sugar syrup, topped with fresh milk foam and boba pearls.");
                }
                if (!$("#MilkTeaProduct_BasePrice").val()) {
                    $("#MilkTeaProduct_BasePrice").val("4.99");
                }
                // Set category to first option
                if ($("#MilkTeaProduct_CategoryId option").length > 0) {
                    $("#MilkTeaProduct_CategoryId").val($("#MilkTeaProduct_CategoryId option:first").val());
                }
            });

            // Animate sections on scroll
            const animateSections = () => {
                const sections = document.querySelectorAll('.form-section');
                sections.forEach((section, index) => {
                    section.style.opacity = "0";
                    section.style.animation = `fadeIn 0.5s ease-out ${index * 0.1}s forwards`;
                });
            };

            // Run animations
            setTimeout(animateSections, 300);
        });
    </script>
}