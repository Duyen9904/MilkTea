@page
@model PRN222.Assignment.Razor.Admin.Components.Milktea.DetailsModel
@{
    ViewData["Title"] = "Milk Tea Product Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-image: url('/images/background.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        color: #333;
        font-family: 'Poppins', sans-serif;
    }

    .page-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(10px);
    }

    .page-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e67e22;
        position: relative;
    }

        .page-header h1 {
            color: #e67e22;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .page-header h4 {
            color: #7f8c8d;
            font-weight: 500;
        }

    .details-card {
        background-color: white;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .detail-section {
        border-left: 4px solid #e67e22;
        padding-left: 1.5rem;
        margin-bottom: 2rem;
    }

    .detail-section-title {
        font-weight: 600;
        color: #e67e22;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
    }

    dt {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 0.5rem;
    }

    dd {
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px dashed #eee;
    }

    .btn-primary {
        background-color: #e67e22;
        border-color: #e67e22;
        padding: 12px 24px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #d35400;
            border-color: #d35400;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(230, 126, 34, 0.3);
        }

    .btn-outline-secondary {
        color: #7f8c8d;
        border-color: #7f8c8d;
        padding: 12px 24px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-outline-secondary:hover {
            background-color: #7f8c8d;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(127, 140, 141, 0.3);
        }

    .back-link {
        display: inline-block;
        margin-top: 1.5rem;
        color: #e67e22;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
    }

        .back-link:hover {
            color: #d35400;
            text-decoration: none;
        }

    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .badge-success {
        background-color: #2ecc71;
        color: white;
    }

    .badge-danger {
        background-color: #e74c3c;
        color: white;
    }

    .floating-actions {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 100;
    }

    .btn-float {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        text-align: center;
        line-height: 60px;
        font-size: 1.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        margin-left: 1rem;
        display: inline-block;
    }

    .btn-warning {
        background-color: #f39c12;
        border-color: #f39c12;
        color: white;
    }

    .btn-info {
        background-color: #3498db;
        border-color: #3498db;
        color: white;
    }

    /* Animation */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .animated {
        animation: fadeIn 0.5s ease-out forwards;
    }
</style>

<div class="page-container animated">
    <div class="page-header">
        <h1><i class="fas fa-mug-hot"></i> Product Details</h1>
        <h4>View complete information about this milk tea product</h4>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="details-card">
                <div class="detail-section">
                    <div class="detail-section-title"><i class="fas fa-info-circle"></i> Basic Information</div>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MilkTeaProduct.ProductName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MilkTeaProduct.ProductName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MilkTeaProduct.Category)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MilkTeaProduct.Category.CategoryName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MilkTeaProduct.Description)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MilkTeaProduct.Description)
                        </dd>
                    </dl>
                </div>

                <div class="detail-section">
                    <div class="detail-section-title"><i class="fas fa-tag"></i> Pricing & Availability</div>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MilkTeaProduct.BasePrice)
                        </dt>
                        <dd class="col-sm-8">
                            $@Html.DisplayFor(model => model.MilkTeaProduct.BasePrice)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MilkTeaProduct.IsAvailable)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.MilkTeaProduct.IsAvailable)
                            {
                                <span class="badge badge-success"><i class="fas fa-check"></i> Available</span>
                            }
                            else
                            {
                                <span class="badge badge-danger"><i class="fas fa-times"></i> Not Available</span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="detail-section">
                    <div class="detail-section-title"><i class="fas fa-calendar-alt"></i> Timestamps</div>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MilkTeaProduct.CreatedDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MilkTeaProduct.CreatedDate)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MilkTeaProduct.LastModified)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MilkTeaProduct.LastModified)
                        </dd>
                    </dl>
                </div>

                <div class="text-center mt-4">
                    <a asp-page="./Edit" asp-route-id="@Model.MilkTeaProduct.ProductId" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Product
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-secondary ml-2">
                        <i class="fas fa-list"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="details-card">
                <div class="detail-section-title"><i class="fas fa-image"></i> Product Image</div>
                @if (!string.IsNullOrEmpty(Model.MilkTeaProduct.ImagePath))
                {
                    <img src="@Model.MilkTeaProduct.ImagePath" alt="@Model.MilkTeaProduct.ProductName" class="product-image" />
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No image available for this product.
                    </div>
                }
                <div class="mt-4">
                    <small class="text-muted">Image Path:</small>
                    <p class="text-truncate">@Model.MilkTeaProduct.ImagePath</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-page="./Index" class="back-link">
            <i class="fas fa-arrow-left"></i> Back to Products List
        </a>
    </div>
</div>

<div class="floating-actions">
    <a asp-page="./Edit" asp-route-id="@Model.MilkTeaProduct.ProductId" class="btn-float btn-warning" title="Edit Product">
        <i class="fas fa-edit"></i>
    </a>
    <a asp-page="./Index" class="btn-float btn-info" title="Back to List">
        <i class="fas fa-list"></i>
    </a>
</div>

@section Scripts {
    <script>
        // Initialize animations
        $(function () {
            // Animate sections on scroll
            const animateSections = () => {
                const sections = document.querySelectorAll('.detail-section');
                sections.forEach((section, index) => {
                    section.style.opacity = "0";
                    section.style.animation = `fadeIn 0.5s ease-out ${index * 0.1}s forwards`;
                });
            };

            // Run animations
            setTimeout(animateSections, 300);
        });
    </script>
}