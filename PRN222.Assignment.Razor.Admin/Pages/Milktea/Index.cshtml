@page
@model PRN222.Assignment.Razor.Admin.Components.Milktea.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="row mb-4">
        <!-- Navigation Link to ComboOrder -->
        <div class="col-md-4">
            <a class="btn btn-primary btn-lg w-100" asp-page="/ComboOrder/Index">View Combo Orders</a>
        </div>
        <!-- Link to create a new item -->
        <div class="col-md-4">
            <a class="btn btn-success btn-lg w-100" asp-page="Create">Create New Product</a>
        </div>
    </div>

    <!-- Milk Tea Product Table -->
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].Description)</th>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].BasePrice)</th>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].ImagePath)</th>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].IsAvailable)</th>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].CreatedDate)</th>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].LastModified)</th>
                <th>@Html.DisplayNameFor(model => model.MilkTeaProduct[0].Category)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MilkTeaProduct)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.BasePrice)</td>
                    <td>
                        <img src="@item.ImagePath" alt="Product Image" class="img-fluid" style="max-width: 100px;" />
                    </td>
                    <td>
                        @if (item.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Available</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastModified)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.ProductId">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a> |
                        <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.ProductId">
                            <i class="bi bi-eye"></i> Details
                        </a> |
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.ProductId"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

