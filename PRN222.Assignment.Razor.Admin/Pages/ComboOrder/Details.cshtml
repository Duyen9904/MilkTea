@page
@model PRN222.Assignment.Razor.Admin.Pages.ComboOrder.DetailsModel
@{
    ViewData["Title"] = "Combo Order Details";
}

<style>
    body {
        background-image: url('/images/background.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
    }

    .page-container {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 8px;
        padding: 2rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }
</style>

<div class="container page-container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0 fs-4"><i class="bi bi-info-circle me-2"></i>Combo Order Details</h2>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.OrderCombo.OrderComboId" class="btn btn-light btn-sm me-2">
                    <i class="bi bi-pencil me-1"></i>Edit
                </a>
                <a asp-page="./Index" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-list me-1"></i>Back to List
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Order Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-muted">Order ID</h6>
                                <p class="lead">@Html.DisplayFor(model => model.OrderCombo.OrderId)</p>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-muted">Delivery Address</h6>
                                <p>@Html.DisplayFor(model => model.OrderCombo.Order.DeliveryAddress)</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Combo Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-muted">Combo Name</h6>
                                <p class="lead">@Html.DisplayFor(model => model.OrderCombo.Combo.ComboName)</p>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <h6 class="text-muted">Quantity</h6>
                                        <p class="badge bg-primary fs-6">@Html.DisplayFor(model => model.OrderCombo.Quantity)</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <h6 class="text-muted">Unit Price</h6>
                                        <p class="fw-bold">$@Html.DisplayFor(model => model.OrderCombo.UnitPrice)</p>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-success mt-2">
                                <h6 class="mb-1">Total Amount</h6>
                                <p class="h4 mb-0">$@(Model.OrderCombo.Quantity * Model.OrderCombo.UnitPrice)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Back to List
                </a>
                <a asp-page="./Edit" asp-route-id="@Model.OrderCombo.OrderComboId" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-1"></i>Edit
                </a>
            </div>
        </div>
    </div>
</div>